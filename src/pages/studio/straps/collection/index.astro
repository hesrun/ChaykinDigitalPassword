<ScreenLayout>
    <ScreenBody hasNavbr>
        <RoundButton variant="transparentDark" href="/studio/straps">
            <ArrowLeft stroke-width={1} class="text-primary" />
        </RoundButton>
        <Title as="h1" class="my-4">Коллекция мануфактуры</Title>
