---
const sizes = [
    { id: "size-m", label: "M" },
    { id: "size-l", label: "L" },
    { id: "size-xl", label: "XL" },
];
---

<div class="flex gap-2">
    {
        sizes.map((size) => (
            <label
                for={size.id}
                class="border border-line rounded-xl px-4 py-2 cursor-pointer font-roboto roboto-flex-custom font-semibold has-checked:border-primary transition-colors"
            >
                <input type="radio" name="size" id={size.id} class="hidden" />
                {size.label}
            </label>
        ))
    }
</div>
