---
import clsx from "clsx";
export interface Props {
    href?: string;
    variant?: "transparentLight" | "transparentDark" | "gray" | "primary";
    class?: string;
}
const {
    href,
    class: className = "",
    variant = "transparentLight",
} = Astro.props;

const variantClasses = {
    transparentLight:
        "bg-white/30 active:bg-white/10 transition-colors text-white backdrop-blur-sm",
    transparentDark:
        "bg-black/10 active:bg-black/20 transition-colors text-white backdrop-blur-sm",
    gray: "bg-gray-200 active:bg-gray-300 transition-colors text-black",
    primary: "bg-primary active:bg-primary-dark transition-colors text-white",
};
const Tag = href ? "a" : "button";
---

<Tag
    {...href ? { href } : {}}
    class={clsx(
        "p-2 rounded-full relative shrink-0 inline-block",
        variantClasses[variant],
        className,
    )}
>
    <slot />
</Tag>
