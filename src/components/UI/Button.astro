---
import clsx from "clsx";

export interface Props {
    variant?: "primary" | "secondary" | "white" | "transparent" | "outline";
    type?: "button" | "submit" | "reset";
    size?: "small" | "medium";
    class?: string;
    disabled?: boolean;
    isLoading?: boolean;
    href?: string;
}

const {
    class: className = "",
    type = "button",
    disabled = false,
    isLoading = false,
    variant = "primary",
    size = "medium",
    href = "#",
} = Astro.props;
const Tag = href ? "a" : "button";
---

<Tag
    href={href ? href : undefined}
    type={type}
    disabled={disabled}
    class={clsx(
        "btn",
        `btn-${variant}`,
        `btn-${size}`,
        isLoading && "btn-loading",
        className,
    )}
>
    <slot name="icon" />
    <slot />
    {
        isLoading && (
            <span class="ml-2 animate-spin border-2 border-t-transparent border-current rounded-full w-4 h-4" />
        )
    }
</Tag>
