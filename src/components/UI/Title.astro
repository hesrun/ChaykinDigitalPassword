---
import clsx from "clsx";

export interface Props {
    as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
    class?: string;
}

const { as = "h1", class: className = "" } = Astro.props as Props;

const sizes = {
    h1: "text-[2rem]",
    h2: "text-[1.75rem]",
    h3: "text-[1.5rem]",
    h4: "text-[1.25rem]",
    h5: "text-[1.125rem]",
    h6: "text-[1rem]",
};

const titleSize = sizes[as];
const Tag = as;
---

<Tag
    class={clsx(
        "font-roboto roboto-flex-custom font-semibold leading-none",
        titleSize,
        className,
    )}
>
    <slot />
</Tag>
