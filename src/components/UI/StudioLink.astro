---
import { ArrowRight } from "@lucide/astro";
import Title from "@components/UI/Title.astro";

interface StudioLinkProps {
    variant?: "minimal" | "default";
    href: string;
    title: string;
    description: string;
    img?: string;
}

const {
    href,
    title,
    description,
    img,
    variant = "default",
} = Astro.props as StudioLinkProps;
---

{
    variant === "minimal" ? (
        <a
            href={href}
            class="flex justify-between items-center px-4 py-8 border-b border-line active:bg-primary/5"
        >
            <div>
                <Title as="h4" class="flex-1" set:html={title} />
                <p class="text-medium mt-1">{description}</p>
            </div>
            <span class="text-primary">
                <ArrowRight stroke-width={1} />
            </span>
        </a>
    ) : (
        <a
            href={href}
            class="block p-4 border-b border-line active:bg-primary/5"
        >
            <div class="flex items-center gap-4">
                {img && <img src={img} alt={title} class="rounded-xl" />}
                <Title as="h4" class="flex-1" set:html={title} />
                <span class="text-primary">
                    <ArrowRight stroke-width={1} />
                </span>
            </div>
            <p class="text-medium mt-4">{description}</p>
        </a>
    )
}
